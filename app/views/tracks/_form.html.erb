<form action="<%= tracks_path %>" method="Post">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
	<label for="track_name">Track Name</label>
	<input type="text" name="track[name]" id="track_name">
	<br>
	<label for="album_name">Album Name</label>
	<select name="track[album_id]" id="album_name">
		<% Album.all.each do |album| %>
		  <option value="<%= album.id %>"><%= album.name %></option>
		<% end %>
	</select>
	<br>

  <label for="track_bonus">Bonus Track</label>
	<input type="checkbox" name="track[bonus]" id="track_bonus" value="True">
	<br>

  <!-- The seconds and minutes parameters are turned into duration
		and removed from the parameters in the controller -->
	Duration
  <input type="number" name="track[minutes]" id = "track_duration">
	<label for="track_minutes">min</label>
	<input type="number" name="track[seconds]" id = "track_seconds">
	<label for="track_seconds">sec</label>
	<br>
	<label for="track_lyrics">Lyrics</label>
	<br>
	<textarea name="track[lyrics]" placeholder="Type lyrics here!" id="track_lyrics"></textarea>
	<br>

	<input type="number" name="track[position]" id="track_position">
	<label for="track_position">Track Number</label>
	<br>

	<input type="submit" value="Add Track">
</form>

