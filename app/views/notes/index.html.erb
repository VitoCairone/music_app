<h1>Listing notes</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Track</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.text %></td>
    <td><%= note.track_id %></td>
    <td><%= note.user_id %></td>
    <td><%= link_to 'Show', note %></td>
		<%if @current_user.id == note.user_id || @current_user.admin%>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<%end%>
  </tr>
<% end %>
</table>

<br />

